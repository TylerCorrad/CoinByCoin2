<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <!-- Fondo blanco -->
                    <solid android:color="@color/blanco" />
                    <!-- Contorno amarillo -->
                    <stroke
                        android:width="2dp"
                        android:color="@color/amarillo_oscuro" />
                    <!-- Bordes redondeados -->
                    <corners android:radius="10dp" />
                    <padding android:left="16dp"
                        android:right="8dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/flecha_abajo"
                android:gravity="end">
            </item>
        </layer-list>
    </item>
</selector>
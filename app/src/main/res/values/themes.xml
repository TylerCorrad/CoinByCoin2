        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TxtBlancoMediano">
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TxtBlancoGrandeItalic">
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="EstiloInput">
        <item name="android:textColorHint">@color/texto2</item> <!-- Gris -->
        <item name="android:textStyle">italic</item>
    </style>

    <style name="EstiloEditText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/texto2</item>
        <item name="hintAnimationEnabled">false</item>
    </style>


    <style name="Theme.NavigationDrawer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verde_claro</item>
        <item name="colorPrimaryVariant">
            @color/verde_oscuro
        </item>
        <item name="colorOnPrimary">@color/blanco</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amarillo_claro</item>
        <item name="colorSecondaryVariant">
            @color/amarillo_oscuro
        </item>
        <item name="colorOnSecondary">@color/texto1</item>
        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NavigationDrawer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NavigationDrawer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NavigationDrawer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="button_card" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/verde_oscuro</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NavigationViewTextStyle" parent="TextAppearance.AppCompat">
        <!-- Modifica el color, tamaño, etc., según tus preferencias -->
        <item name="android:textColor">@color/texto2</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
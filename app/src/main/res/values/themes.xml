    </style>

    <style name="TxtGrisMedianoItalic">
        <item name="android:textColor">@color/texto2</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="TxtGrisPequenoItalic">
        <item name="android:textColor">@color/texto2</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">italic</item>
    </style>


<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="textInputStyle">@style/EstiloInput</item>
        <item name="colorPrimary">@color/verde_claro</item>
        <item name="colorPrimaryDark">@color/verde_oscuro</item>
        <item name="colorAccent">@color/amarillo_oscuro</item>
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

    </style>

    <style name="EstiloBtnVerde" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_verde</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EstiloBtnAmarillo" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_amarillo</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EstiloBordeAmarillo" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_borde_amarillo</item>
        <item name="android:textColor">@color/amarillo_oscuro</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EstiloBordeVerde" parent="Widget.AppCompat.Button">

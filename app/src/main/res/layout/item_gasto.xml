<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TxtNegroPequenoItalic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtValor"
        android:layout_marginVertical="8dp"
        />


    <TextView
        android:id="@+id/txtValor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TxtNegroPequenoItalic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/txtDescripcion"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="end"
        android:layout_marginVertical="8dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/texto2"
        app:layout_constraintTop_toBottomOf="@id/txtValor"
        android:layout_marginVertical="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
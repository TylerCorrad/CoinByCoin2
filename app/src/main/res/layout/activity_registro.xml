<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        tools:context=".Registro">

        <TextView
            android:id="@+id/btnVolver"
            style="@style/TxtVerdePequenoItalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="8dp"
            android:text="@string/volver"
            app:layout_constraintTop_toTopOf ="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

        <View
            android:id="@+id/linea_verde"
            android:layout_width="match_parent"
            android:layout_height="2.3dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnVolver"
            android:background="@color/verde_oscuro"
            />

        <TextView
            android:id="@+id/txtNombres"
            style="@style/TxtNegroMedianoItalic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="8dp"
            android:text="@string/nombres"
            app:layout_constraintTop_toBottomOf ="@id/linea_verde"
            app:layout_constraintStart_toStartOf="parent"/>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/wrapperinputNombres"
            style="@style/EstiloBordeAmarillo"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toBottomOf="@id/txtNombres"
            app:layout_constraintStart_toStartOf="@id/txtNombres"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundMode="none">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtinputNombres"
                style="@style/EstiloEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/txtApellidos"
            style="@style/TxtNegroMedianoItalic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="8dp"
            android:text="@string/apellidos"
            app:layout_constraintTop_toBottomOf ="@id/wrapperinputNombres"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/wrapperinputApellidos"
            style="@style/EstiloBordeAmarillo"
            android:layout_height="45dp"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toBottomOf="@id/txtApellidos"
            app:layout_constraintStart_toStartOf="@id/txtApellidos"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundMode="none">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtinputApellidos"
            style="@style/EstiloEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txtUsuario"
            style="@style/TxtNegroMedianoItalic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="8dp"
            android:text="@string/usuario"
            app:layout_constraintTop_toBottomOf ="@id/wrapperinputApellidos"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/wrapperinputUsuario"
            style="@style/EstiloBordeAmarillo"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toBottomOf="@id/txtUsuario"
            app:layout_constraintStart_toStartOf="@id/txtUsuario"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundMode="none">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtinputUsuario"
                style="@style/EstiloEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txtContrasena2"
            style="@style/TxtNegroMedianoItalic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="8dp"
            android:text="@string/contrasena1"
            app:layout_constraintTop_toBottomOf ="@id/wrapperinputUsuario"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/wrapperinputContrasena2"
            style="@style/EstiloBordeAmarillo"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toBottomOf="@id/txtContrasena2"
            app:layout_constraintStart_toStartOf="@id/txtContrasena2"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundMode="none">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtinputContrasena2"
                style="@style/EstiloEditText"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txtConf"
            style="@style/TxtNegroMedianoItalic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="8dp"
            android:text="@string/conf_contrasena"
            app:layout_constraintTop_toBottomOf ="@id/wrapperinputContrasena2"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/wrapperinputConf"
            style="@style/EstiloBordeAmarillo"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toBottomOf="@id/txtConf"
            app:layout_constraintStart_toStartOf="@id/txtConf"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundMode="none">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtinputConf"
                style="@style/EstiloEditText"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

<TextView
    android:id="@+id/Advertencia"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:layout_constraintStart_toStartOf="@id/wrapperinputConf"
    app:layout_constraintEnd_toEndOf="@id/wrapperinputConf"
    app:layout_constraintTop_toBottomOf="@id/wrapperinputConf"
    style="@style/TxtVerdePequenoItalic"

    />

        <Button
            android:id="@+id/btnRegistro"
            style="@style/EstiloBtnVerde"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/el_ahorro"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/Advertencia"
            app:layout_constraintStart_toStartOf="@id/wrapperinputUsuario"
            app:layout_constraintEnd_toEndOf="@id/wrapperinputUsuario"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>